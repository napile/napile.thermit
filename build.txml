<project name="thermit" default="dist" basedir=".">
	<property name="build.version" value="1.0" />

	<property name="dist" location="dist" />
	<property name="lib" location="lib" />

	<property name="build" location="build" />
	<property name="build.classes" location="${build}/classes" />

	<property name="build.dist" location="${build}/dist" />
	<tstamp>
		<format property="build.tstamp" pattern="HH:mm dd.MM.yyyy" />
	</tstamp>

	<target name="clean" description="Remove the output directories.">
		<delete dir="${build}" />
	</target>

	<target name="init" description="Create the output directories.">
		<mkdir dir="${build}" />
	</target>

	<macrodef name="main.compile">
		<attribute name="dir" />
		<attribute name="name" />
		<sequential>
			<antcall target="init" />
			<delete dir="${build.classes}/@{dir}" />
			<mkdir dir="${build.classes}/@{dir}" />

			<mkdir dir="${build.dist}/bin" />
			<mkdir dir="${build.dist}/lib" />

			<javac srcdir="@{dir}/src/main/java" destdir="${build.classes}/@{dir}" source="1.6" target="1.6" encoding="UTF-8" nowarn="off" classpathref="classpath">
				<compilerarg value="-Xlint:all" />
			</javac>

			<copy todir="${build.classes}/@{dir}" failonerror="false">
				<fileset dir="@{dir}/src/main/resources">
					<include name="**/*.properties" />
				</fileset>
			</copy>

			<nzip destfile="${build.dist}/lib/@{name}-${build.version}.nzip" moduledir="@{dir}/src/main/java">
				<fileset dir="${build.classes}/@{dir}" />
			</nzip>

			<copy todir="${build.dist}/bin">
				<fileset dir="@{dir}/bin">
					<include name="*" />
				</fileset>
			</copy>

			<copy todir="${build.dist}/lib">
				<fileset dir="@{dir}/lib">
					<include name="*.jar" />
					<exclude name="*-sources.jar" />
				</fileset>
			</copy>
		</sequential>
	</macrodef>

	<macrodef name="core.compile">
		<attribute name="dir" />
		<attribute name="name" />
		<sequential>
			<path id="classpath">
				<fileset dir="@{dir}/lib">
					<include name="**/*.jar" />
				</fileset>
			</path>

			<main.compile name="@{name}" dir="@{dir}" />
		</sequential>
	</macrodef>

	<macrodef name="etc.compile">
		<attribute name="dir" />
		<attribute name="name" />
		<sequential>
			<path id="classpath">
				<fileset dir="@{dir}/lib">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${build.dist}/${thermit.project.name}">
					<include name="${thermit.project.name}-${build.version}.jar" />
				</fileset>
			</path>

			<main.compile name="@{name}" dir="@{dir}" />
		</sequential>
	</macrodef>

	<target name="build.libs">
		<core.compile dir="${thermit.project.name}-core" name="${thermit.project.name}" />
	</target>

	<target name="dist" depends="clean, init, build.libs">
		<zip destfile="${build}/${thermit.project.name}-${build.version}-full.zip" basedir="${build.dist}" />
	</target>
</project>